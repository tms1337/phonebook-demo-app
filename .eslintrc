{
  "extends": ["standard-react", "prettier", "prettier/react"],
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-handler-names": [0],
    "prettier/prettier": "error",
    "react/prop-types": 0
  },
  "plugins": ["prettier", "react"]
}
